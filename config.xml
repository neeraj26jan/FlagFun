<?xml version='1.0' encoding='utf-8'?>
<widget id="com.flexsharp.flagfunlearning" version="1.0.1" android-versionCode="1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Flag Fun Learning</name>
    <description>
        Know about all flags of the world with easy fun learning
    </description>
    <author email="neeraj.26jan@gmail.com" href="http://shinewebs.com">
        Niraj Kumar
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="org.apache.cordova.media" />
    <plugin name="org.apache.cordova.device" />
    <plugin name="org.apache.cordova.splashscreen" />
    <plugin name="org.apache.cordova.inappbrowser" />
    <plugin name="cordova-plugin-tts" />
    
    <access origin="*" />
        <preference name="SplashScreen" value="screen" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="exit-on-suspend" value="false"/>
        <preference name="AndroidLaunchMode" value="singleTask" />
        <!--<preference name="BackgroundColor" value="0xff83e749"/>-->
        <preference name="orientation" value="auto" />

    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
